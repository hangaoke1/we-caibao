<template>
  <view class="container">
    <wxc-overlay :left="left" v-if="show" :show="true" :hasAnimation="false"></wxc-overlay>
    <view class="dialog-box" v-if="show" :style="{ top: top + 'rpx'}">
      <view class="dialog-content">
        <slot name="title">
          <text class="content-title" v-if="title">{{ title }}</text>
        </slot>
        <slot name="content">
          <text class="content-subtext">{{ content }}</text>
        </slot>
        <view class="no-prompt" v-if="showNoPrompt" @click.stop="noPromptClicked">
          <image :src="noPromptIcon" class="no-prompt-icon"></image>
          <text class="no-prompt-text">{{ noPromptText }}</text>
        </view>
      </view>
      <view class="dialog-footer" v-if="showBottom">
        <view class="footer-btn cancel" v-if="!single" @click.stop="secondaryClicked">
          <text class="btn-text" :style="{ color: secondBtnColor }">{{ cancelText }}</text>
        </view>
        <view class="footer-btn confirm" @click.stop="primaryClicked">
          <text class="btn-text" :style="{ color: mainBtnColor }">{{ confirmText }}</text>
        </view>
      </view>
    </view>
  </view>
</template>

<style scoped>
