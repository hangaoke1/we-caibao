  color: #666666;
  font-size: 26rpx;
  line-height: 36rpx;
  text-align: center;
}
.dialog-footer {
  flex-direction: row;
  align-items: center;
  border-top-color: #f3f3f3;
  border-top-width: 1rpx;
}
.footer-btn {
  flex-direction: row;
